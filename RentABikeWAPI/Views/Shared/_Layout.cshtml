<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <title>Rent a Bike</title>
    <link href="content/bootstrap.css" rel="stylesheet" />
    <link href="content/app/app.css" rel="stylesheet" />
</head>
<body ng-controller="ApplicationController">
    <header>
        <nav class="navbar navbar-inverse" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" ng-click="isMainMenuCollapsed=!isMainMenuCollapsed">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/#/">Rent a Bike!</a>  <!--/#/-->
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" collapse="isMainMenuCollapsed">
                    <ul class="nav navbar-nav">
                        <li><a href="#/rentals">Rentals</a></li>
                        <li><a href="#/customers">Customers</a></li>
                        <li><a href="#/bicycles">Bicycles</a></li>   <!--#/bicycles-->
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div>
        </nav>
    </header>
    <section>
        @RenderBody()
    </section>
    <script src="Scripts/moment.js"></script>
    <script src="Scripts/angular.js"></script>
    <script src="Scripts/angular-route.js"></script>
    <script src="Scripts/angular-animate.js"></script>
    <script src="Scripts/ui-bootstrap-tpls-0.10.0.js"></script>
    <script src="Scripts/app/app.js"></script>
    <script src="Scripts/app/services/bicyclesServices.js"></script>
    <script src="Scripts/app/services/customersServices.js"></script>
    <script src="Scripts/app/services/rentalsServices.js"></script>
    <script src="Scripts/app/controllers/applicationController.js"></script>
    <script src="Scripts/app/controllers/bicyclesController.js"></script>
    <script src="Scripts/app/controllers/bicycleController.js"></script>
    <script src="Scripts/app/controllers/customersController.js"></script>
    <script src="Scripts/app/controllers/customerController.js"></script>
    <script src="Scripts/app/controllers/rentalsController.js"></script>
    <script src="Scripts/app/controllers/rentalController.js"></script>
</body>
</html>
